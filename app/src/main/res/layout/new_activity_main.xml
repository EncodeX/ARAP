<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px">
        <requestFocus />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/actionBar"
        android:orientation="horizontal"
        android:background="#009788">
        <ImageButton
            android:layout_width="32dp"
            android:layout_marginLeft="8dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:id="@+id/portrait"
            android:background="@drawable/ic_account_circle_white_48dp"/>
        <ImageButton
            android:layout_width="32dp"
            android:id="@+id/option"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_more_vert_white_48dp"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_height="32dp" />
        <EditText
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/option"
            android:layout_toRightOf="@+id/portrait"
            android:background="@drawable/shape"
            android:text="搜索商户名、地点"
            android:gravity="center"
            android:textColor="#5b7977"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_restaurant"
                    android:id="@+id/restaurant"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="美食"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_movie"
                    android:id="@+id/movie"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="电影"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_leisure"
                    android:id="@+id/leisure"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="娱乐"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/ic_travel"
                    android:id="@+id/travel"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="旅游"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/eye"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视镜,即刻感受未来"
                    android:textColor="#009788"/>
            </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/eye"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视镜,即刻感受未来"
                    android:textColor="#009788"/>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#f3f3f3"
                    android:layout_height="220dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周边热点"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/explore_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f3f3f3"/>
                </LinearLayout>
                <edu.neu.arap.activity.SlidingSwitcherView
                    android:id="@+id/slidingLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="100dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <Button
                            android:layout_width="fill_parent"
                            android:id="@+id/slidingSwitcherView1"
                            android:layout_height="fill_parent"
                            android:background="@drawable/image1" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/slidingSwitcherView2"
                            android:background="@drawable/image2" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/slidingSwitcherView3"
                            android:background="@drawable/image3" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/slidingSwitcherView4"
                            android:background="@drawable/image4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="60dip"
                        android:layout_height="20dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="15dip"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </edu.neu.arap.activity.SlidingSwitcherView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="#f3f3f3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网友好评"
                        android:textColor="#000000"
                        android:layout_margin="8dp"
                        android:textSize="14sp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/explore_list2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f3f3f3"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>





