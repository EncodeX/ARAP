<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f3f3f3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MuseumDetailActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/museum_detail_actionBar"
        android:orientation="horizontal"
        android:background="#009788">
        <ImageButton
            android:layout_width="32dp"
            android:layout_marginLeft="8dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:id="@+id/museum_detail_back"
            android:background="@drawable/ic_chevron_left_white_36dp"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_height="32dp"
            android:id="@+id/forNameCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@drawable/back"
           />
        <TextView
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="展览名称"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/forNameCenter"
            android:id="@+id/museum_detail_name"
            android:layout_toRightOf="@+id/museum_detail_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/museum_detail_image"/>
        <TextView
            android:padding="16dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_shadow_inverse"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/museum_detail_intro"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展览名称"
            android:textColor="#000000"
            android:id="@+id/museum_detail_name_2"
            android:paddingTop="8dp"
            android:layout_margin="8dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_below="@id/museum_detail_name_2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009788"
                android:textColor="#ffffff"
                android:id="@+id/museum_detail_indoor"
                android:layout_below="@+id/museum_detail_name_2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="室内导航"/>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/museum_detail_name_2"
                android:text="到这去"
                android:id="@+id/gotoMap"
                android:background="#009788"
                android:textColor="#ffffff"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/museum_detail_mark"
            android:text="评分：4.9"
            android:layout_alignBottom="@+id/museum_detail_name_2"
            android:layout_toRightOf="@+id/museum_detail_name_2" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="8dp"
        android:background="#f3f3f3"
        android:textSize="16dp"
        android:paddingTop="8dp"
        android:text="珍藏展品"/>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/museum_detail_list"
        android:dividerHeight="8dp"
        android:divider="#00000000"
        android:layout_height="match_parent"></ListView>
</LinearLayout>