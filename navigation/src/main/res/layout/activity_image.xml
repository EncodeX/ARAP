<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.neu.navigation.ImageActivity">

    <Button
        android:text="定位"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/navigation"
        tools:ignore="HardcodedText"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image"
        app:layout_constraintTop_toTopOf="@+id/activity_image"
        app:layout_constraintRight_toRightOf="@+id/activity_image"
        app:layout_constraintBottom_toBottomOf="@+id/activity_image"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintVertical_bias="0.97" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="41dp"
        android:id="@+id/locationView"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:text="Test"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toTopOf="@+id/activity_image"
        app:layout_constraintBottom_toBottomOf="@+id/activity_image"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.96" />

    <ImageView
        android:layout_width="384dp"
        android:layout_height="426dp"
        app:srcCompat="@mipmap/indoor"
        android:id="@+id/indoorImage"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image"
        app:layout_constraintTop_toTopOf="@+id/activity_image"
        app:layout_constraintRight_toRightOf="@+id/activity_image" />
   <!-- <HorizontalScrollView

        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:fillViewport="false"
        app:layout_constraintLeft_toLeftOf="@+id/activity_image"
        app:layout_constraintTop_toTopOf="@+id/activity_image">


    </HorizontalScrollView>
-->

</android.support.constraint.ConstraintLayout>
