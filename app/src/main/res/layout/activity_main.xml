<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.MainActivity">
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="new_design"
		android:id="@+id/newDesign"/>
	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		tools:src="@drawable/demo_background"
		android:visibility="gone"
		tools:visibility="visible"/>
	<FrameLayout
		android:id="@+id/preview"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<ImageView
		android:id="@+id/test_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:visibility="gone"/>


	<Button
		android:id="@+id/flashlight_button"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="8dp"
		android:layout_marginTop="8dp"
		android:visibility="gone"
		android:background="@drawable/btn_flash_selector" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="请将手机保持平稳"
		android:id="@+id/hint_text"
		android:visibility="invisible"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:textColor="#FFFFFF"
		android:shadowColor="#000000"/>
	<RelativeLayout
		android:id="@+id/expand_area"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="-100dp">
		<Button
			android:id="@+id/explore_button"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_margin="8dp"
			android:layout_alignParentRight="true"
			android:background="@drawable/btn_explore_selector"/>
		<android.support.v7.widget.RecyclerView
			android:id="@+id/explore_list"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:layout_below="@id/explore_button"
			android:visibility="visible"
			android:background="#99000000"/>
		<Spinner
			android:id="@+id/filter_spinner"
			android:layout_width="96dp"
			android:layout_height="32dp"
			android:layout_above="@id/explore_list"
			android:padding="4dp"
			android:visibility="invisible"
			android:layout_toRightOf="@+id/select"
			android:background="@color/color"/>
		<Button
			android:layout_width="96dp"
			android:layout_height="32dp"
			android:id="@+id/select"
			android:text="筛选"
			android:textColor="#ffffff"
			android:visibility="invisible"
			android:layout_above="@+id/explore_list"
			android:background="@drawable/btn_select_selector"/>
	</RelativeLayout>

	<Button
		android:id="@+id/main_menu_button"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_margin="8dp"
		android:layout_alignParentRight="true"
		android:layout_above="@id/expand_area"
		android:background="@drawable/btn_main_menu"/>
<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:visibility="gone"
	android:id="@+id/menu_background">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:id="@+id/menu_background_img"
		android:src="@drawable/back"
		/>
	<RelativeLayout
		android:id="@+id/menu"
		android:layout_width="200dp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="108dp"
		android:layout_height="200dp"
		android:background="#99000000">
		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/menu_innerbackground_img"
			android:background="@drawable/back"
			/>
		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginLeft="26dp"
			android:layout_marginTop="26dp"
			android:id="@+id/menu_setting"
			android:background="@drawable/ic_settings_black_48dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/menu_setting_text"
			android:textColor="#ffffff"
			android:text="设置"
			android:layout_marginLeft="36dp"
			android:layout_below="@+id/menu_setting"/>
		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_below="@+id/menu_setting"
			android:layout_marginLeft="26dp"
			android:layout_marginTop="52dp"
			android:id="@+id/menu_thumb"
			android:background="@drawable/ic_thumb_up_black_48dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/menu_thumb_text"
			android:textColor="#ffffff"
			android:text="排行"
			android:layout_marginLeft="36dp"
			android:layout_below="@+id/menu_thumb"/>

		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="26dp"
			android:layout_marginTop="26dp"
			android:id="@+id/menu_stars"
			android:background="@drawable/ic_stars_black_48dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/menu_stars_text"
			android:textColor="#ffffff"
			android:text="收藏"
			android:layout_alignParentRight="true"
			android:layout_marginRight="36dp"
			android:layout_below="@+id/menu_setting"/>
		<Button
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:id="@+id/menu_help"
			android:layout_below="@+id/menu_setting"
			android:layout_alignParentRight="true"
			android:layout_marginRight="26dp"
			android:layout_marginTop="52dp"
			android:background="@drawable/ic_help_black_48dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/menu_help_text"
			android:textColor="#ffffff"
			android:text="帮助"
			android:layout_alignParentRight="true"
			android:layout_marginRight="36dp"
			android:layout_below="@+id/menu_help"/>
	</RelativeLayout>

</RelativeLayout>
	<RelativeLayout
		android:layout_width="275dp"
		android:layout_height="170dp"
		android:id="@+id/intro"
		android:visibility="gone"
		android:background="#99000000"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="140dp">
		<ImageView
			android:layout_width="80dp"
			android:layout_height="110dp"
			android:id="@+id/intro_image"
			android:src="@drawable/a"
			android:layout_marginTop="8dp"
			android:layout_marginLeft="8dp"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="商品名称：名称"
			android:id="@+id/intro_title"
			android:layout_toRightOf="@+id/intro_image"
			android:layout_margin="10dp"
			android:textColor="#ffffff"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="商品描述：这是描述这是描述这是描述这是描述这是描述这是描述"
			android:id="@+id/intro_content"
			android:layout_toRightOf="@+id/intro_image"
			android:layout_below="@+id/intro_title"
			android:layout_marginLeft="10dp"
			android:textColor="#ffffff"/>

		<Button
			android:layout_width="48dp"
			android:layout_height="24dp"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="8dp"
			android:layout_marginLeft="24dp"
			android:background="#CD3700"
			android:text="到这去"
			android:id="@+id/intro_go"
			android:textColor="#ffffff"
			/>
		<Button
			android:layout_width="48dp"
			android:layout_height="24dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="8dp"
			android:layout_marginRight="24dp"
			android:textColor="#ffffff"
			android:background="#363636"
			android:id="@+id/intro_cancel"
			android:text="算了"/>



	</RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible"
		android:id="@+id/core">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sensor"
			android:layout_centerVertical="true"
			android:background="#363636"
			android:textColor="#ffffff"
			android:layout_marginTop="8dp"
			android:text="hello"/>
		<ImageView
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentRight="true"
			android:layout_margin="8dp"
			android:id="@+id/core_share"
			android:layout_above="@+id/core_camera"
			android:src="@drawable/ic_share_black_48dp"/>
		<ImageView
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:id="@+id/core_camera"
			android:layout_margin="8dp"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/ic_camera_alt_black_48dp"/>
		<!--<ImageView
			android:layout_alignParentRight="true"
			android:id="@+id/core_close"
			android:layout_margin="8dp"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/ic_close_black_48dp"/>
			-->

	</RelativeLayout>

	<Button
		android:layout_width="match_parent"
		android:visibility="gone"
		android:id="@+id/top_extend_background"
		android:layout_height="match_parent"
		android:background="@drawable/back"
		/>
	<RelativeLayout
		android:background="#99000000"
		android:visibility="gone"
		android:id="@+id/help_area"
		android:layout_centerHorizontal="true"
		android:layout_width="match_parent"
		android:layout_marginTop="-30dp"
		android:layout_height="130dp">
		<TextView
			android:layout_margin="32dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textColor="#ffffff"
			android:text="这是帮助信息"/>
		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/back"/>
	</RelativeLayout>

</RelativeLayout>