<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/museumItem"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:id="@+id/museumListViewImage"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展览名称"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="8dp"

                android:textSize="16sp"
                android:id="@+id/museumListViewName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:id="@+id/museumMark"
                android:textColor="#000000"
                android:text="评分：4.9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="展览简介"
                android:isScrollContainer="true"
                android:maxLines="4"
                android:paddingRight="8dp"
                android:id="@+id/museumListViewIntro"
                android:layout_below="@+id/museumListViewName"
                android:layout_alignLeft="@+id/museumListViewName"
                android:layout_alignStart="@+id/museumListViewName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.1km"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/museumListView_distance"/>
            <!--  <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="8dp"
                  android:text="到这去"
                  android:id="@+id/museumListViewBtn"
                  android:textColor="#ffffff"
                  android:background="#009788"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"/>
                  -->
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


