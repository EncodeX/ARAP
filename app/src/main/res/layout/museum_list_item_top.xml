<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展览名称"
            android:textColor="#000000"
            android:id="@+id/museum_detail_name_2"
            android:paddingTop="8dp"
            android:layout_margin="8dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_below="@id/museum_detail_name_2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009788"
                android:textColor="#ffffff"
                android:id="@+id/museum_detail_indoor"
                android:layout_below="@+id/museum_detail_name_2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="室内导航"/>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/museum_detail_name_2"
                android:text="到这去"
                android:id="@+id/gotoMap"
                android:background="#009788"
                android:textColor="#ffffff"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/museum_detail_mark"
            android:text="评分：4.9"
            android:layout_alignBottom="@+id/museum_detail_name_2"
            android:layout_toRightOf="@+id/museum_detail_name_2" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_margin="8dp"
        android:background="#f3f3f3"
        android:textSize="16dp"
        android:paddingTop="8dp"
        android:text="珍藏展品"/>
</LinearLayout>


