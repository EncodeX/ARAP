<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/activity_augmented"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="edu.neu.arap.activity.AugmentedActivity"
	tools:background="@drawable/img_preview">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/camera_preview"/>

	<FrameLayout
		android:id="@+id/scan_bar_1"
		android:layout_width="match_parent"
		android:layout_height="24dp"
		android:visibility="invisible"
		android:background="@drawable/img_scanner"/>
	<FrameLayout
		android:id="@+id/scan_bar_2"
		android:layout_width="match_parent"
		android:layout_height="24dp"
		android:visibility="invisible"
		android:background="@drawable/img_scanner"/>

	<TextView
		android:id="@+id/ar_hint"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:text="将手机对准图片"
		android:layout_marginTop="48dp"
		android:textColor="#CCFFFFFF"
		android:textSize="16sp"
		android:textStyle="bold"
		android:shadowColor="#2196f3"
		android:shadowDy="0"
		android:shadowDx="0"
		android:shadowRadius="10"/>

	<RelativeLayout
		android:layout_width="84dp"
		android:layout_height="84dp"
		android:layout_marginTop="-14dp"
		android:layout_marginLeft="-14dp"
		android:clickable="false"
		style="@style/AppTheme.UnboundedButton.White.Borderless">
		<ImageButton
			android:id="@+id/ar_back_button"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:layout_centerInParent="true"
			android:scaleType="centerCrop"
			android:src="@drawable/ic_ar_back"
			android:padding="4dp"
			style="@style/AppTheme.UnboundedButton.Borderless"/>
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/ar_buttons"
		android:layout_width="72dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:orientation="vertical"
		android:background="#80000000">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:clickable="false"
			style="@style/AppTheme.UnboundedButton.White.Borderless">
			<RelativeLayout
				android:id="@+id/ar_camera_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				style="@style/AppTheme.UnboundedButton.White.Borderless">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:clickable="false">
					<FrameLayout
						android:id="@+id/ar_camera_icon"
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:background="@drawable/ic_ar_camera"
						android:clickable="false"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/ar_camera_icon"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="4dp"
						android:textColor="#90caf9"
						android:textSize="12sp"
						android:shadowColor="#2196f3"
						android:shadowDx="0"
						android:shadowDy="0"
						android:shadowRadius="20"
						android:text="截图"/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/ar_info_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				style="@style/AppTheme.UnboundedButton.White.Borderless">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:clickable="false">
					<FrameLayout
						android:id="@+id/ar_info_icon"
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:background="@drawable/ic_ar_info"
						android:clickable="false"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/ar_info_icon"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="4dp"
						android:textColor="#90caf9"
						android:textSize="12sp"
						android:shadowColor="#2196f3"
						android:shadowDx="0"
						android:shadowDy="0"
						android:shadowRadius="15"
						android:text="介绍"/>
				</RelativeLayout>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/ar_fav_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				style="@style/AppTheme.UnboundedButton.White.Borderless">
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:clickable="false">
					<FrameLayout
						android:id="@+id/ar_fav_icon"
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:background="@drawable/ic_ar_star"
						android:clickable="false"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@id/ar_fav_icon"
						android:layout_centerHorizontal="true"
						android:layout_marginTop="4dp"
						android:textColor="#90caf9"
						android:textSize="12sp"
						android:shadowColor="#2196f3"
						android:shadowDx="0"
						android:shadowDy="0"
						android:shadowRadius="10"
						android:text="收藏"/>
				</RelativeLayout>
			</RelativeLayout>
		</LinearLayout>
	</FrameLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="80dp"
		android:layout_toLeftOf="@id/ar_buttons"
		android:layout_alignParentBottom="true"
		android:padding="16dp"
		style="@style/AppTheme.UnboundedButton.White.Borderless">
		<ImageButton
			android:id="@+id/ar_type_model_button"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/ic_ar_model_selected"
			android:scaleType="fitCenter"
			android:padding="4dp"
			style="@style/AppTheme.UnboundedButton.Borderless"/>
		<ImageButton
			android:id="@+id/ar_type_image_button"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_toRightOf="@id/ar_type_model_button"
			android:layout_marginLeft="4dp"
			android:src="@drawable/ic_ar_picture"
			android:scaleType="fitCenter"
			android:padding="4dp"
			style="@style/AppTheme.UnboundedButton.Borderless"/>
		<ImageButton
			android:id="@+id/ar_type_video_button"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_toRightOf="@id/ar_type_image_button"
			android:layout_marginLeft="4dp"
			android:src="@drawable/ic_ar_video"
			android:scaleType="fitCenter"
			android:padding="4dp"
			style="@style/AppTheme.UnboundedButton.Borderless"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/loading_indicator"
		android:layout_width="84dp"
		android:layout_height="84dp"
		android:background="@drawable/shp_round_rect"
		android:layout_centerInParent="true"
		android:visibility="gone">
		<com.pnikosis.materialishprogress.ProgressWheel
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_centerInParent="true"
			android:visibility="visible"
			app:matProg_barColor="@color/colorARBlue"
			app:matProg_progressIndeterminate="true"
			app:matProg_barWidth="2dp"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/ar_info_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:visibility="invisible"
		android:visibility="invisible">
		<FrameLayout
			android:id="@+id/ar_info_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ImageView
				android:id="@+id/ar_capture_background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
			<ImageView
				android:id="@+id/ar_blur_background"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		</FrameLayout>
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TextView
					android:id="@+id/ar_info_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="32dp"
					android:layout_marginLeft="56dp"
					android:textSize="32sp"
					android:textColor="@color/colorARBlue"
					android:shadowColor="@color/colorARBlueDark"
					android:shadowDx="0"
					android:shadowDy="0"
					android:shadowRadius="10"
					android:text="波须圣母玻璃反画"
					tools:text="展品名称"/>
				<android.support.v7.widget.RecyclerView
					android:id="@+id/ar_info_gallery"
					android:layout_width="match_parent"
					android:layout_height="152dp"
					android:layout_below="@id/ar_info_title"
					android:layout_marginTop="24dp"/>
				<TextView
					android:id="@+id/ar_info_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@id/ar_info_gallery"
					android:layout_marginTop="24dp"
					android:layout_marginLeft="56dp"
					android:layout_marginRight="56dp"
					android:textSize="16sp"
					android:textColor="#EEEEEE"
					android:text="@string/ar_info_description"/>
				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="32dp"
					android:layout_below="@id/ar_info_description"/>
			</RelativeLayout>
		</ScrollView>
		<RelativeLayout
			android:layout_width="84dp"
			android:layout_height="84dp"
			android:layout_alignParentRight="true"
			android:layout_marginTop="-14dp"
			android:layout_marginRight="-14dp"
			android:clickable="false"
			style="@style/AppTheme.UnboundedButton.White.Borderless">
			<ImageButton
				android:id="@+id/ar_info_close_button"
				android:layout_width="56dp"
				android:layout_height="56dp"
				android:layout_centerInParent="true"
				android:scaleType="centerCrop"
				android:src="@drawable/ic_ar_close"
				android:padding="4dp"
				style="@style/AppTheme.UnboundedButton.White.Borderless"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
