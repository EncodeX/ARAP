<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f3f3f3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MuseumDetailActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/museum_detail_actionBar"
        android:orientation="horizontal"
        android:background="#009788">
        <ImageButton
            android:layout_width="32dp"
            android:layout_marginLeft="8dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:id="@+id/museum_detail_back"
            android:background="@drawable/ic_chevron_left_white_36dp"/>
        <ImageButton
            android:layout_width="32dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_height="32dp"
            android:id="@+id/forNameCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@drawable/back"
           />
        <TextView
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="展览名称"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/forNameCenter"
            android:id="@+id/museum_detail_name"
            android:layout_toRightOf="@+id/museum_detail_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/museum_detail_image"/>
        <TextView
            android:padding="16dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:background="@drawable/gradient_shadow_inverse"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/museum_detail_intro"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/museum_detail_list"
        android:dividerHeight="8dp"
        android:divider="#00000000"
        android:layout_height="match_parent"></ListView>
</LinearLayout>